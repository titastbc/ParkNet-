@page
@model ParkNet_Cristovao.Machado.Pages.TariffTicketGestor.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if(Model.DailyTicket.Count == 0)
{
    <p class="text-danger">You didnt set a price for the daily ticket yet</p>
    <div>
        <a asp-page="CreateDailyTicket">Set now</a>
    </div>
}
else if ( Model.DailyTicket.Count == 1)
{
    <p class="text-success">You already have a price for the daily ticket, click on the button to edit the price</p>
    <p>Current price is @Model.DailyTicket[0].Price</p>
    <div>
        <a asp-page="EditDailyTicket">Edit</a>
    </div>
})
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TariffTicket[0].Inicialperiod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TariffTicket[0].Finalperiod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TariffTicket[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TariffTicket) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inicialperiod) Min
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Finalperiod) Min
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)$
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
