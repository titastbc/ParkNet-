                    <input asp-for="TariffTicket.Finalperiod" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text">Min</span>
                    </div>
                </div>
                <span asp-validation-for="TariffTicket.Finalperiod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TariffTicket.Price" class="control-label">Price</label>
                <div class="input-group">
                    <input asp-for="TariffTicket.Price" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text">$</span>
                    </div>
                </div>
                <span asp-validation-for="TariffTicket.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
