@page
@model ParkNet_Cristovao.Machado.Pages.VehicleGestor.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>MyVehicles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Plate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Factory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vehicle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Plate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Factory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="/Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
